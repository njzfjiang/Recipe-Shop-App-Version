<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/recipe_shop_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/recipe_shop_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeShopAppVersion"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".Activity.SettingsActivity"
            android:exported="true">
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".Activity.SearchActivity"
            android:exported="true">
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".Activity.FavoritesActivity"
            android:exported="true">
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".Activity.GroceryActivity"
            android:exported="true">
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".Activity.AboutActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>